<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chart Sample</title>
    <link rel="icon" href="chart.ico">
    @*chart script*@
    <script src="~/Scripts/chart-2.7.1.js"></script>
    <style>
        .leftnav {
            position:absolute;
            top:0;
            left:0;
            width:20%;
        }
        
        .renderbody {
            margin: auto;
            max-width: 500px;
            text-align: center;
        }

        hr {
            border-color: red;
        }

        a {
            text-decoration:none;
            font-size:medium;
            font-weight:bolder;
        }

        /*Accordion start*/
        button.accordion {
            background-color: #eee;
            color: #444;
            cursor: pointer;
            padding: 18px;
            width: 100%;
            border: none;
            text-align: left;
            outline: none;
            font-size: 15px;
            transition: 0.4s;
        }

            button.accordion.active, button.accordion:hover {
                background-color: #ccc;
            }

            button.accordion:after {
                content: '\002B';
                color: #777;
                font-weight: bold;
                float: right;
                margin-left: 5px;
            }

            button.accordion.active:after {
                content: "\2212";
            }

        div.panel {
            padding: 0 18px;
            background-color: burlywood;
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.2s ease-out;
        }
        /*Accordion end*/
        /*Vertical line start*/
        .verticalline {
            border-left: 6px solid green;
            padding-left: 10px;
        }
        /*Vertical line end*/
        /*loader start*/
        #loader {
            position: absolute;
            left: 50%;
            top: 50%;
            z-index: 1;
            width: 150px;
            height: 150px;
            margin: -75px 0 0 -75px;
            border: 16px solid #f3f3f3;
            border-radius: 50%;
            border-top: 16px solid #3498db;
            width: 120px;
            height: 120px;
            -webkit-animation: spin 2s linear infinite;
            animation: spin 2s linear infinite;
        }

        @@-webkit-keyframes spin {
            0% {
                -webkit-transform: rotate(0deg);
            }

            100% {
                -webkit-transform: rotate(360deg);
            }
        }

        @@keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }
        /*loader end*/
    </style>
</head>
<body>
    <div id="loader" style="display:none"></div>
    <div class="leftnav">
        <button class="accordion">Bar Charts</button>
        <div class="panel">
            <div class="verticalline">
                <div class="link"><p>@Html.ActionLink("Vertical", "Vertical", "BarCharts")</p></div>
                <div class="link"><p>@Html.ActionLink("Horizontal", "Horizontal", "BarCharts")</p></div>
                <div class="link"><p>@Html.ActionLink("Multi Axis", "MultiAxis", "BarCharts")</p></div>
                <div class="link"><p>@Html.ActionLink("Stacked", "Stacked", "BarCharts")</p></div>
                <div class="link"><p>@Html.ActionLink("Stacked Groups", "StackedGroup", "BarCharts")</p></div>
            </div>
        </div>
        <button class="accordion">Line Charts</button>
        <div class="panel">
            <div class="verticalline">
                <div class="link"><p>@Html.ActionLink("Basic", "Basic", "LineCharts")</p></div>
                <div class="link"><p>@Html.ActionLink("Stepped", "Stepped", "LineCharts")</p></div>
                <div class="link"><p>@Html.ActionLink("Multi Axis", "MultiAxis", "LineCharts")</p></div>
                <div class="link"><p>@Html.ActionLink("Interpolation", "Interpolation", "LineCharts")</p></div>
                <div class="link"><p>@Html.ActionLink("Line Styles", "LineStyles", "LineCharts")</p></div>
                <div class="link"><p>@Html.ActionLink("Point Styles", "PointStyles", "LineCharts")</p></div>
            </div>
        </div>
        <button class="accordion">Arc Charts</button>
        <div class="panel">
            <div class="verticalline">
                <div class="link"><p>@Html.ActionLink("Pie Basic", "PieBasic", "ArcCharts")</p></div>
                <div class="link"><p>@Html.ActionLink("Doughnut Basic", "DoughnutBasic", "ArcCharts")</p></div>
                <div class="link"><p>@Html.ActionLink("PolarArea Basic", "PolarAreaBasic", "ArcCharts")</p></div>
            </div>
        </div>
        <button class="accordion">Scatter Charts</button>
        <div class="panel">
            <div class="verticalline">
                <div class="link"><p>@Html.ActionLink("Basic", "Basic", "ScatterCharts")</p></div>
                <div class="link"><p>@Html.ActionLink("Multi Axis", "MultiAxis", "ScatterCharts")</p></div>
            </div>
        </div>
        <button class="accordion">Radar Charts</button>
        <div class="panel">
            <div class="verticalline">
                <div class="link"><p>@Html.ActionLink("Basic", "Basic", "RadarCharts")</p></div>
            </div>
        </div>
        <button class="accordion">Mix Charts</button>
        <div class="panel">
            <div class="verticalline">
                <div class="link"><p>@Html.ActionLink("Basic", "Basic", "MixCharts")</p></div>
            </div>
        </div>
        <button class="accordion">Area Charts</button>
        <div class="panel">
            <div class="verticalline">
                <div class="link"><p>@Html.ActionLink("Line Boundaries", "LineBoundaries", "AreaCharts")</p></div>
                <div class="link"><p>@Html.ActionLink("Line Stacked", "LineStacked", "AreaCharts")</p></div>
            </div>
        </div>
    </div>
    <div class="renderbody">
        @RenderBody()
    </div>
</body>
<script>
    var acc = document.getElementsByClassName("accordion");
    var i;
    for (i = 0; i < acc.length; i++) {
        acc[i].onclick = function () {
            this.classList.toggle("active");
            var panel = this.nextElementSibling;
            if (panel.style.maxHeight) {
                panel.style.maxHeight = null;
            } else {
                panel.style.maxHeight = panel.scrollHeight + "px";
            }
        }
    }
</script>
</html>
